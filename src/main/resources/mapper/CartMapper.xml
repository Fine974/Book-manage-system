<!-- CartMapper.xml -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fine.bookmanagesystem.mapper.CartMapper">

    <select id="getCartItemsByUserId" parameterType="Long" resultType="com.fine.bookmanagesystem.model.Cart">
        SELECT * FROM cart WHERE user_id = #{userId};
    </select>

    <select id="getCartItemById" parameterType="Long" resultType="com.fine.bookmanagesystem.model.Cart">
        SELECT * FROM cart WHERE id = #{id};
    </select>

    <insert id="addToCart" parameterType="com.fine.bookmanagesystem.model.Cart">
        INSERT INTO cart (user_id, book_id, quantity) VALUES (#{userId}, #{bookId}, #{quantity});
    </insert>

    <update id="updateCartItemQuantity" parameterType="com.fine.bookmanagesystem.model.Cart">
        UPDATE cart SET quantity = #{quantity} WHERE id = #{id};
    </update>

    <delete id="removeFromCart" parameterType="Long">
        DELETE FROM cart WHERE id = #{id};
    </delete>

    <delete id="clearCart" parameterType="Long">
        DELETE FROM cart WHERE user_id = #{userId};
    </delete>

</mapper>
